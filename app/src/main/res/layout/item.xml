<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/list_selector"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal" >


        <View
            android:layout_width="2dp"
            android:layout_height="45dp"
            android:background="@drawable/line"
            android:visibility="visible" />

        <com.example.administrator.paipai.view.InterceptScrollContainerItem
            android:id="@+id/scroollContainter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true" >

            <com.example.administrator.paipai.view.MyHScrollView
                android:id="@+id/horizontalScrollView_excel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:fillViewport="true"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/host_top_bar_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="序号"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="@drawable/line"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/host_top_bar_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="时间"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="@drawable/line"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/host_top_bar_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="金额"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="@drawable/line"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/host_top_bar_4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="状态"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="@drawable/line"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/host_top_bar_5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="支付方式"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="@drawable/line"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/host_top_bar_6"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="收费站"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="@drawable/line"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/host_top_bar_7"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="通道编号"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="@drawable/line"
                        android:visibility="visible" />
                </LinearLayout>
            </com.example.administrator.paipai.view.MyHScrollView>
        </com.example.administrator.paipai.view.InterceptScrollContainerItem>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_weight="0"
        android:background="@drawable/line"
        android:visibility="visible" />

</LinearLayout>